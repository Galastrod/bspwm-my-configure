configuration {
    display-drun: "ï€‚";
    display-clipboard: "";
    drun-display-format: "{name}";
    modi: "drun";
    icon-theme: "Papirus-Dark";
}

@import "~/.config/rofi/themes/colors.rasi"

* {
    font: "JetBrainsMono Nerd Font 10";

    background-color: @bg;
    text-color: @fg;
    separatorcolor: transparent;

    border: 0;
    margin: 0;
    padding: 0;
    spacing: 0;
}

window {
    width: 700px;
    height: 350px;
    padding: 10;
    border-radius: 4;
    background-color: @bg;
}

mainbox {
    background-color: @bg;
    children: [inputbar, listview];
    padding: 0;
}

inputbar {
    children: [prompt, entry];
    background-color: @bg-alt;
    text-color: @fg;
    border-radius: 6;
    margin: 10 0;
    padding: 5;
}

prompt {
    font: "Font Awesome 6 Free";
    background-color: transparent;
    text-color: @accent;
    padding: 0 10 0 10;
}

entry {
    background-color: transparent;
    text-color: @fg;
    placeholder-color: @underline;
    placeholder: "Search...";
    padding: 6;
    blink: false;
}

listview {
    scrollbar: false;
    background-color: @bg;
    columns: 2;
    lines: 7;
    margin: 8 0 0 0;
    padding: 4 0;
}

element {
    border-radius: 4;
    padding: 10;
    background-color: transparent;
}

element-text {
    expand: true;
    horizontal-align: 0;
    vertical-align: 0.5;
    background-color: inherit;
    text-color: inherit;
}

element-icon {
    padding: 0 10 0 0;
    background-color: inherit;
    text-color: inherit;
}

element.normal.normal {
    background-color: @bg;
    text-color: @fg;
}
element.normal.urgent,
element.normal.active {
    background-color: @bg-alt;
    text-color: @fg;
}

element.selected.normal,
element.selected.urgent,
element.selected.active {
    background-color: @accent;
    text-color: @bg;
}

element.alternate.normal,
element.alternate.urgent,
element.alternate.active {
    background-color: @bg;
    text-color: @fg;
}
